    }
</div>


@section scribts

    {

    <script>




        function Toggle() {
            var temp = document.getElementById("inputpass");
            if (temp.type === "password") {
                temp.type = "text";
            }
            else {
                temp.type = "password";
            }
        }

    </script>

}