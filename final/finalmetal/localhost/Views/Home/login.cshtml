<div class="d-flex justify-content-center">
    @using (Html.BeginForm("login", "Home", method: FormMethod.Post))
    {

        <h2>login</h2>




        <div class="form-group row">
            @Html.LabelFor(ww => ww.Email, htmlAttributes: new { @class = "col-2" })
            <div class="col-sm-12">
                @Html.EditorFor(ww => ww.Email, additionalViewData: new { htmlAttributes = new { @class = "col-12 form-control", placeholder = "enter your email here" } })
                @Html.ValidationMessageFor(ww => ww.Email, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group row">
            @Html.LabelFor(ww => ww.Password, htmlAttributes: new { @class = "col-2" })
            <div class="col-sm-12">
                <div>
                    @Html.EditorFor(ww => ww.Password, additionalViewData: new { htmlAttributes = new { @class = "col-12 form-control form-control", @id = "inputpass", placeholder = "enter password" } })
                    <span onclick="Toggle()" id="check" class="col-1 input-group-addon"> <i class="far fa-eye fa-2x"></i> </span>
                </div>
                @Html.ValidationMessageFor(ww => ww.Password, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-10">
            @Html.ValidationSummary(true, "email or pass  wrong!!!!!!!!!", htmlAttributes: new { @class = "text-danger" })
        </div>


        @*<div class="col-10">
            <input type="checkbox" onclick="Toggle()" id="check" class="col-2" /> <b>Show Password</b>
        </div>*@

        <br />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success">login</button>
        </div>

        <br />
