<div class="d-flex justify-content-center">
    @using (Html.BeginForm("register", "Home", method: FormMethod.Post))
    {
        <h1>Register</h1>

        <div class="form-group row">

            @Html.LabelFor(ww => ww.Name, htmlAttributes: new { @class = "col-2" })
            <div class="col-sm-12">
                @Html.EditorFor(ww => ww.Name, additionalViewData: new { htmlAttributes = new { @class = "col-12 form-control", placeholder = "enter your name here" } })
                @Html.ValidationMessageFor(ww=>ww.Name,"",htmlAttributes:new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(ww => ww.Email, htmlAttributes: new { @class = "col-2" })
            <div class="col-sm-12">
                @Html.EditorFor(ww => ww.Email, additionalViewData: new { htmlAttributes = new { @class = "col-12 form-control", placeholder = "enter your email here" } })
                @Html.ValidationMessageFor(ww => ww.Name, "", htmlAttributes: new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(ww => ww.Password, htmlAttributes: new { @class = "col-2" })
            <div class="col-sm-12">
                @Html.EditorFor(ww => ww.Password, additionalViewData: new { htmlAttributes = new { @class = "col-12 form-control", placeholder = "enter password here" } })
                @Html.ValidationMessageFor(ww => ww.Name, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group row">
            @Html.LabelFor(ww => ww.ConfirmPassword, htmlAttributes: new { @class = "col-2" })
            <div class="col-sm-12">
                @Html.EditorFor(ww => ww.ConfirmPassword, additionalViewData: new { htmlAttributes = new { @class = "col-12 form-control", placeholder = "enter password here" } })
                @Html.ValidationMessageFor(ww => ww.Name, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group row">
            @Html.LabelFor(ww => ww.Phone, htmlAttributes: new { @class = "col-2" })
            <div class="col-sm-12">
                @Html.EditorFor(ww => ww.Phone, additionalViewData: new { htmlAttributes = new { @class = "col-12 form-control", placeholder = "enter your phone here" } })
            </div>
        </div>
        <br />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success">Register</button>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
    }
</div>