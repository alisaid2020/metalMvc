@model finalmetal.Models.product
@{
    ViewBag.Title = "Details";
}


<br />
<br />
<br />
<br />


<div class="container-fluid mx-auto p-5 col-lg-10">

    <div class="mx-auto" style="width: 400px;">

        <h2>details</h2>
    </div>

    <div id="carousel">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="2000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/@Model.Image1" class="d-block w-100 " style="height:400px">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/@Model.Image2" class="d-block w-100 " style="height:400px">
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/@Model.Image3" class="d-block w-100 " style="height:400px">
                    <div class="carousel-caption">
                    </div>
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <br />
    <div class="mx-auto">
        <h1 id="hov">@Model.Name</h1>
        <p class="hov">السعر:@Model.Price:جنيه</p>
        @if (Session["type"] == "Admin" && Session["userid"] != null)
        {

            @Html.ActionLink("Back to list", "ProductAdmin", new { id = Model.Id }, new { @class = "btn btn-success" })
        }
        else
        {

            @Html.ActionLink("Back to list", "products", new { id = Model.Id }, new { @class = "btn btn-success" })

        }

    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
